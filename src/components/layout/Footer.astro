---
import footerData from "@/data/footer.json";
// Force rebuild

const { brand, services, infoLinks, contact, social, legal } = footerData;
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-black/96 dark:bg-black/98 border-t border-gray-700 dark:border-gray-600"
>
  <div class="container mx-auto px-4 lg:px-8 py-12 md:py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Section -->
      <div class="space-y-4 col-span-2 md:col-span-1">
        <h2
          class="text-2xl font-bold tracking-tight text-white dark:text-gray-100"
        >
          {brand.name}
        </h2>
        <p class="text-sm text-gray-300 dark:text-gray-400 leading-relaxed">
          {brand.description}
        </p>
        <div class="flex items-center gap-1 text-sm">
          <svg
            class="w-5 h-5 text-white"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
            ></path>
          </svg>
          <span class="font-semibold text-white dark:text-gray-100"
            >{brand.rating.score}/{brand.rating.max}</span
          >
          <span class="text-gray-100 dark:text-gray-500"
            >de {brand.rating.total} {brand.rating.label}</span
          >
        </div>
        <div
          class="flex items-center gap-2 text-sm text-gray-300 dark:text-gray-400"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>+{brand.stats.events} {brand.stats.label}</span>
        </div>
      </div>

      <!-- Services Column -->
      <div class="space-y-4">
        <h3
          class="text-lg font-semibold uppercase tracking-wider text-gray-200 dark:text-gray-500"
        >
          Servicios
        </h3>
        <ul class="space-y-3">
          {
            services.map((service) => (
              <li>
                <a
                  href={service.href}
                  class="relative inline-block text-gray-100 dark:text-gray-400 hover:text-white dark:hover:text-gray-200 
                       transition-colors duration-200 text-sm group"
                >
                  {service.label}
                  <span
                    class="absolute bottom-0 left-0 w-full h-0.5 bg-white dark:bg-gray-200
                         transition-transform duration-200 origin-left scale-x-0 group-hover:scale-x-100"
                    aria-hidden="true"
                  />
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Information Column -->
      <div class="space-y-4">
        <h3
          class="text-lg font-semibold uppercase tracking-wider text-gray-200 dark:text-gray-500"
        >
          Información
        </h3>
        <ul class="space-y-3">
          {
            infoLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="relative inline-block text-gray-100 dark:text-gray-400 hover:text-white dark:hover:text-gray-200 
                       transition-colors duration-200 text-sm group"
                >
                  {link.label}
                  <span
                    class="absolute bottom-0 left-0 w-full h-0.5 bg-white dark:bg-gray-200
                         transition-transform duration-200 origin-left scale-x-0 group-hover:scale-x-100"
                    aria-hidden="true"
                  />
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Column -->
      <div class="space-y-4 col-span-2 md:col-span-1">
        <h3
          class="text-lg font-semibold uppercase tracking-wider text-gray-200 dark:text-gray-500"
        >
          Contacto
        </h3>
        <div class="space-y-3 text-sm">
          <!-- Email -->
          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 mt-0.5 text-gray-100 dark:text-gray-500 shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <div>
              <p
                class="text-gray-100 dark:text-gray-500 text-xs uppercase tracking-wide mb-1"
              >
                Email
              </p>
              <a
                href={`mailto:${contact.email}`}
                class="text-gray-100 dark:text-gray-400 hover:text-white dark:hover:text-gray-200 transition-colors"
              >
                {contact.email}
              </a>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 mt-0.5 text-gray-100 dark:text-gray-500 shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <div>
              <p
                class="text-gray-100 dark:text-gray-500 text-xs uppercase tracking-wide mb-1"
              >
                Teléfono
              </p>
              <a
                href={`tel:${contact.phone.replace(/\s/g, "")}`}
                class="text-gray-100 dark:text-gray-400 hover:text-white dark:hover:text-gray-200 transition-colors"
              >
                {contact.phone}
              </a>
            </div>
          </div>

          <!-- Location -->
          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 mt-0.5 text-gray-100 dark:text-gray-500 shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <p
                class="text-gray-100 dark:text-gray-500 text-xs uppercase tracking-wide mb-1"
              >
                Ubicación
              </p>
              <a
                href={contact.googleMaps}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-100 dark:text-gray-400 hover:text-white dark:hover:text-gray-200 transition-colors hover:underline"
              >
                {contact.location}
              </a>
            </div>
          </div>

          <!-- Schedule -->
          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 mt-0.5 text-gray-100 dark:text-gray-500 shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <p
                class="text-gray-100 dark:text-gray-500 text-xs uppercase tracking-wide mb-1"
              >
                Horario
              </p>
              <p class="text-gray-100 dark:text-gray-400">{contact.schedule}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Social Links Section -->
    <div class="mt-12 pt-8 border-t border-gray-400 dark:border-gray-600">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <!-- Social Icons -->
        <div class="flex items-center gap-2">
          <span class="text-sm text-gray-300 dark:text-gray-400 mr-2"
            >Síguenos:</span
          >
          <div class="flex gap-3">
            {
              social.map((socialLink) => (
                <a
                  href={socialLink.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-full border-2 border-gray-300 dark:border-gray-500 
                       flex items-center justify-center text-gray-300 dark:text-gray-400
                       hover:border-white dark:hover:border-gray-300 
                       hover:text-white dark:hover:text-gray-200
                       hover:scale-110 transition-all duration-200"
                  aria-label={socialLink.name}
                >
                  {socialLink.icon === "instagram" && (
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                    </svg>
                  )}
                  {socialLink.icon === "facebook" && (
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                    </svg>
                  )}
                  {socialLink.icon === "whatsapp" && (
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                    </svg>
                  )}
                  {socialLink.icon === "email" && (
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      />
                    </svg>
                  )}
                </a>
              ))
            }
          </div>
        </div>

        <!-- Copyright -->
        <div class="text-center md:text-right">
          <p class="text-sm text-gray-300 dark:text-gray-400">
            © {currentYear}
            {legal.companyName}. Todos los derechos reservados. Hecho con
            Kintsugi en {legal.country}
          </p>
          <div
            class="flex items-center justify-center md:justify-end gap-4 mt-2 text-xs text-gray-400 dark:text-gray-500"
          >
            {
              legal.links.map((link, index) => (
                <>
                  <a
                    href={link.href}
                    class="hover:text-white dark:hover:text-gray-300 transition-colors"
                  >
                    {link.label}
                  </a>
                  {index < legal.links.length - 1 && <span>•</span>}
                </>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  footer a:hover svg {
    animation: pulse 0.3s ease-in-out;
  }
  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }
</style>
