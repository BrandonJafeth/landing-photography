---
import { supabase } from '@/lib/supabase'
import type { Database } from '@/lib/supabase'

type Testimonial = Database['public']['Tables']['testimonials']['Row']

// Obtener testimonios visibles desde Supabase
const { data: testimonials, error } = await supabase
  .from('testimonials')
  .select('*')
  .eq('is_visible', true)
  .order('order', { ascending: true })

if (error) {
  console.error('Error fetching testimonials:', error)
}

const activeTestimonials: Testimonial[] = testimonials || []

// Función para renderizar estrellas
const renderStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, i) => i < rating)
}
---

<section id="testimonials" class="py-12 px-4 bg-white dark:bg-black/90 transition-colors duration-300">
  <div class="max-w-7xl mx-auto">
    <!-- Título de la sección -->
    <div class="text-center mb-16">
      <h2 class="text-2xl md:text-3xl font-semibold text-[#000000] dark:text-white mb-2">
        TESTIMONIOS
      </h2>
      <div class="w-16 h-[1px] bg-[#000000] dark:bg-white mx-auto mb-6"></div>
      <p class="text-lg text-[#000000]/70 dark:text-gray-400 max-w-2xl tracking-wide mx-auto">
        Lo que dicen nuestros clientes
      </p>
    </div>

    <!-- Contenedor horizontal con scroll -->
    {activeTestimonials.length > 0 ? (
      <div id="testimonials-scroll" class="overflow-x-auto pb-8 scrollbar-hide cursor-grab active:cursor-grabbing">
        <div class="flex gap-8 px-4 min-w-max">
          {activeTestimonials.map((testimonial) => (
            <div class="relative w-[calc(100vw-2rem)] md:w-[380px] flex-shrink-0">
              <!-- Cinta adhesiva horizontal (estilo polaroid) -->
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 w-24 h-8 bg-[#d4c5a0]/70 dark:bg-white/20 rotate-0 z-10 shadow-md"
                style="clip-path: polygon(0 0, 100% 0, 98% 100%, 2% 100%);">
              </div>
              
              <!-- Tarjeta del testimonio -->
              <div class="bg-white dark:bg-[#1a1a1a] mt-2 border-4 border-white dark:border-[#2a2a2a] shadow-xl/20 p-5 pt-7 md:p-8 md:pt-10 transition-all duration-300 hover:shadow-xl/30 hover:-translate-y-1 select-none">
                <!-- Header con foto y nombre -->
                <div class="flex items-start gap-4 mb-4">
                  <div class="relative flex-shrink-0">
                    {testimonial.image ? (
                      <img 
                        src={testimonial.image} 
                        alt={testimonial.client_name}
                        class="w-14 h-14 rounded-full object-cover"
                      />
                    ) : (
                      <div class="w-14 h-14 rounded-full bg-[#c4c4c4] dark:bg-gray-700 flex items-center justify-center">
                        <span class="text-white font-bold text-xl">
                          {testimonial.client_name.charAt(0).toUpperCase()}
                        </span>
                      </div>
                    )}
                  </div>

                  <div class="flex-1">
                    <h3 class="font-semibold text-[#000000] dark:text-white text-base">
                      {testimonial.client_name}
                    </h3>
                    {testimonial.position && (
                      <p class="text-xs text-[#999999] dark:text-gray-500">
                        {testimonial.position}
                      </p>
                    )}
                  </div>
                </div>

                <!-- Estrellas -->
                <div class="flex gap-1 mb-4">
                  {renderStars(testimonial.rating).map((filled) => (
                    <svg 
                      class="w-4 h-4 text-[#000000] dark:text-white"
                      fill="currentColor" 
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>

                <!-- Texto del testimonio -->
                <p class="text-[#333333] dark:text-gray-300 text-sm leading-relaxed mb-6">
                  "{testimonial.text}"
                </p>

                <!-- Fecha -->
                {testimonial.created_at && (
                  <p class="text-xs text-[#cccccc] dark:text-gray-600 text-right">
                    {new Date(testimonial.created_at).toLocaleDateString('es-ES', { 
                      month: 'long', 
                      year: 'numeric' 
                    }).toLowerCase()}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-lg text-[#000000]/70 dark:text-gray-400">
          No hay testimonios disponibles en este momento.
        </p>
      </div>
    )}
  </div>
</section>

<script>
  // Drag to scroll functionality
  const scrollContainer = document.getElementById('testimonials-scroll');
  
  if (scrollContainer) {
    let isDown = false;
    let startX: number;
    let scrollLeft: number;

    scrollContainer.addEventListener('mousedown', (e) => {
      isDown = true;
      scrollContainer.classList.add('active');
      startX = e.pageX - scrollContainer.offsetLeft;
      scrollLeft = scrollContainer.scrollLeft;
    });

    scrollContainer.addEventListener('mouseleave', () => {
      isDown = false;
      scrollContainer.classList.remove('active');
    });

    scrollContainer.addEventListener('mouseup', () => {
      isDown = false;
      scrollContainer.classList.remove('active');
    });

    scrollContainer.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - scrollContainer.offsetLeft;
      const walk = (x - startX) * 2; // Multiplicador para velocidad de scroll
      scrollContainer.scrollLeft = scrollLeft - walk;
    });
  }
</script>

<style>
  /* Ocultar scrollbar pero mantener funcionalidad */
  .scrollbar-hide {
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
    scrollbar-width: none;  /* Firefox */
  }
  
  .scrollbar-hide::-webkit-scrollbar {
    display: none;  /* Safari and Chrome */
  }

  /* Animación de entrada para las tarjetas */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Aplicar animación escalonada a las tarjetas */
  .overflow-x-auto > div > div {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .overflow-x-auto > div > div:nth-child(1) {
    animation-delay: 0.1s;
  }

  .overflow-x-auto > div > div:nth-child(2) {
    animation-delay: 0.2s;
  }

  .overflow-x-auto > div > div:nth-child(3) {
    animation-delay: 0.3s;
  }

  .overflow-x-auto > div > div:nth-child(4) {
    animation-delay: 0.4s;
  }

  .overflow-x-auto > div > div:nth-child(5) {
    animation-delay: 0.5s;
  }

  .overflow-x-auto > div > div:nth-child(6) {
    animation-delay: 0.6s;
  }
</style>
