---
import Layout from "@/layouts/Layout.astro";
import { supabase } from "@/lib/supabase";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (async () => {
  const { data: services, error } = await supabase
    .from("services")
    .select("slug")
    .eq("is_active", true);

  if (error) {
    console.error("Error fetching services:", error);
    return [];
  }

  return services.map((service) => ({
    params: { slug: service.slug },
  }));
}) satisfies GetStaticPaths;

const { slug } = Astro.params;

// Obtener los datos del servicio
const { data: service, error } = await supabase
  .from("services")
  .select("*")
  .eq("slug", slug)
  .eq("is_active", true)
  .single();

if (error || !service) {
  return Astro.redirect("/404");
}

// Parsear JSON fields
const features = service.features
  ? typeof service.features === "string"
    ? JSON.parse(service.features)
    : service.features
  : [];

// Obtener imágenes de portfolio asociadas al servicio
const { data: portfolioImages, error: imagesError } = await supabase
  .from("portfolio_images")
  .select("*")
  .eq("service_id", service.id)
  .eq("is_visible", true)
  .order("order", { ascending: true });

const galleryImages = portfolioImages || [];
---

<Layout title={`${service.title} | Gadea Iso`}>
  <main class="bg-white dark:bg-[#000000] transition-colors duration-300">
    <!-- Hero Section con imagen principal -->
    <section
      class="relative h-[60vh] min-h-[400px] max-h-[600px] overflow-hidden"
    >
      <div class="absolute inset-0">
        <img
          src={service.image}
          alt={service.title}
          class="w-full h-full object-cover"
        />
        <div
          class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/30 to-black/70"
        >
        </div>
      </div>

      <!-- Contenido del hero -->
      <div
        class="relative h-full flex items-center justify-center text-center px-4"
      >
        <div class="max-w-4xl mx-auto">
          <h1
            class="text-4xl md:text-6xl font-bold text-white mb-4 tracking-wider"
          >
            {service.title}
          </h1>
          <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto">
            {service.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Descripción detallada -->
    <section class="py-20 px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2
            class="text-2xl md:text-3xl font-semibold text-[#000000] dark:text-white mb-2"
          >
            DESCRIPCIÓN
          </h2>
          <div class="w-16 h-[1px] bg-[#000000] dark:bg-white mx-auto"></div>
        </div>

        <div class="prose prose-lg dark:prose-invert max-w-none text-center">
          <p
            class="text-lg text-[#000000]/70 dark:text-gray-400 max-w-2xl tracking-wide mx-auto"
          >
            {service.detailed_description || service.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Galería de imágenes (Bento Grid) -->
    {
      galleryImages.length > 0 && (
        <section class="py-20 px-4 bg-white dark:bg-[#0a0a0a]">
          <div class="max-w-7xl mx-auto">
            <div class="text-center mb-12">
              <h2 class="text-2xl md:text-3xl font-semibold text-[#000000] dark:text-white mb-2">
                GALERÍA
              </h2>
              <div class="w-16 h-[1px] bg-[#000000] dark:bg-white mx-auto" />
            </div>
            <div class="bento-grid">
              {galleryImages.slice(0, 6).map((image: any, index: number) => (
                <div
                  class={`bento-item bento-item-${index + 1} group relative overflow-hidden rounded-lg`}
                >
                  <img
                    src={image.thumbnail_url || image.image_url}
                    alt={image.alt || `${service.title} - ${image.title}`}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading="lazy"
                  />
                  {image.title && (
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      <div class="absolute bottom-4 left-4 text-white">
                        <p class="font-medium text-sm">{image.title}</p>
                      </div>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Formulario de reserva -->
    <section class="py-20 px-4 bg-white dark:bg-[#0a0a0a]">
      <div
        class="max-w-2xl mx-auto shadow-lg border border-[#000000]/20 rounded-xl p-8"
      >
        <div class="text-center mb-12">
          <h2
            class="text-2xl md:text-3xl font-semibold text-[#000000] dark:text-white mb-2"
          >
            RESERVA TU SESIÓN
          </h2>
          <div class="w-16 h-[1px] bg-[#000000] dark:bg-white mx-auto mb-6">
          </div>
          <p
            class="text-lg text-[#000000]/70 dark:text-gray-400 max-w-2xl tracking-wide mx-auto"
          >
            Solicita información sin compromiso
          </p>
        </div>

        <form class="space-y-6 bg-white dark:bg-[#1a1a1a] p-8 rounded-xl">
          <!-- Nombre completo -->
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-[#000000] dark:text-white mb-2"
            >
              NOMBRE COMPLETO
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-[#000000]/20 dark:border-white/20 rounded-lg bg-transparent text-[#000000] dark:text-white focus:outline-none focus:ring-2 focus:ring-[#000000] dark:focus:ring-white"
              placeholder="Tu nombre"
            />
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-[#000000] dark:text-white mb-2"
            >
              CORREO ELECTRÓNICO
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-[#000000]/20 dark:border-white/20 rounded-lg bg-transparent text-[#000000] dark:text-white focus:outline-none focus:ring-2 focus:ring-[#000000] dark:focus:ring-white"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Teléfono -->
          <div>
            <label
              for="phone"
              class="block text-sm font-medium text-[#000000] dark:text-white mb-2"
            >
              TELÉFONO
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-[#000000]/20 dark:border-white/20 rounded-lg bg-transparent text-[#000000] dark:text-white focus:outline-none focus:ring-2 focus:ring-[#000000] dark:focus:ring-white"
              placeholder="+506 1234-5678"
            />
          </div>

          <!-- Fecha del evento -->
          <div>
            <label
              for="event-date"
              class="block text-sm font-medium text-[#000000] dark:text-white mb-2"
            >
              FECHA DEL EVENTO
            </label>
            <input
              type="date"
              id="event-date"
              name="event-date"
              class="w-full px-4 py-3 border border-[#000000]/20 dark:border-white/20 rounded-lg bg-transparent text-[#000000] dark:text-white focus:outline-none focus:ring-2 focus:ring-[#000000] dark:focus:ring-white"
            />
          </div>

          <!-- Mensaje -->
          <div>
            <label
              for="message"
              class="block text-sm font-medium text-[#000000] dark:text-white mb-2"
            >
              MENSAJE
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 border border-[#000000]/20 dark:border-white/20 rounded-lg bg-transparent text-[#000000] dark:text-white focus:outline-none focus:ring-2 focus:ring-[#000000] dark:focus:ring-white resize-none"
              placeholder="Cuéntanos más sobre tu evento..."></textarea>
          </div>

          <!-- Botón de envío -->
          <button
            type="submit"
            class="w-full px-8 py-4 bg-[#000000] dark:bg-white text-white dark:text-[#000000] font-medium rounded-lg transition-all duration-300 hover:bg-[#000000]/80 dark:hover:bg-white/90"
          >
            SOLICITAR INFORMACIÓN
          </button>
        </form>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Bento Grid Layout para galería */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: 250px;
    gap: 1rem;
  }

  .bento-item-1 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .bento-item-2 {
    grid-column: span 2;
    grid-row: span 1;
  }

  .bento-item-3 {
    grid-column: span 2;
    grid-row: span 1;
  }

  .bento-item-4 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .bento-item-5 {
    grid-column: span 2;
    grid-row: span 1;
  }

  .bento-item-6 {
    grid-column: span 2;
    grid-row: span 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: 200px;
      gap: 0.5rem;
    }

    .bento-item-1,
    .bento-item-4 {
      grid-column: span 2;
      grid-row: span 2;
    }

    .bento-item-2,
    .bento-item-3,
    .bento-item-5,
    .bento-item-6 {
      grid-column: span 1;
      grid-row: span 1;
    }
  }

  /* Animación de entrada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bento-item {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .bento-item:nth-child(1) {
    animation-delay: 0.1s;
  }
  .bento-item:nth-child(2) {
    animation-delay: 0.2s;
  }
  .bento-item:nth-child(3) {
    animation-delay: 0.3s;
  }
  .bento-item:nth-child(4) {
    animation-delay: 0.4s;
  }
  .bento-item:nth-child(5) {
    animation-delay: 0.5s;
  }
  .bento-item:nth-child(6) {
    animation-delay: 0.6s;
  }
</style>
